@model IEnumerable<TechSolutionsApp.Models.Project>
@{
    ViewData["Title"] = "Proyectos";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Proyectos</h2>
    <a class="btn btn-primary" asp-action="Create">Nuevo proyecto</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Fecha de inicio</th>
            <th>Usuario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.User?.Name</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
